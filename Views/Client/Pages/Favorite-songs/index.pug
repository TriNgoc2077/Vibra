extends ../../Layouts/default.pug 
include ../../Mixins/box-head.pug 

block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)
        .row 
            each song in songs 
                .col-6.mb-3 
                    .song-item 
                        .inner-image 
                            a(href=`/song/detail/${song.slug}`) 
                                img(src=song.avatar, alt="Song avatar")
                        .inner-content 
                            .inner-title 
                                a(href=`/song/detail/${song.slug}`) #{song.title}
                            .inner-singer 
                                i.fa-solid.fa-microphone-lines 
                                | #{song.singer}