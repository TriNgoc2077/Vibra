mixin box-head(title)
    .box-head.mb-4
        .title-wrapper
            h2.inner-title #{title}
            .title-underline
        
    style.
        .box-head {
            position: relative;
            padding: 1rem 0;
        }

        .title-wrapper {
            position: relative;
            display: inline-block;
        }

        .inner-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: #2c3e50;
            margin: 0;
            padding-bottom: 0.5rem;
            position: relative;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .title-underline {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(to right, #3498db, #2ecc71);
            border-radius: 2px;
            transition: width 0.3s ease;
        }

        .box-head:hover .title-underline {
            width: 50%;
        }

        @media (max-width: 768px) {
            .inner-title {
                font-size: 1.5rem;
            }
        }