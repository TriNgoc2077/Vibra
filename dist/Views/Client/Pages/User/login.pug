extends ../../Layouts/default.pug 

block main
    .login-container
        .background-overlay
        .login-box.animate-fadeIn
            .login-header.text-center.mb-4
                h2.text-white.animate-slideDown Welcome Back
                p.text-muted.animate-slideDown Enjoy your favorite music

            form.login-form
                .form-group.mb-3.animate-slideRight
                    .input-group
                        span.input-group-text.bg-transparent.border-end-0
                            i.fas.fa-envelope.text-primary
                        input.form-control.border-start-0(type="email" placeholder="Email address" required name="email")

                .form-group.mb-4.animate-slideRight
                    .input-group
                        span.input-group-text.bg-transparent.border-end-0
                            i.fas.fa-lock.text-primary
                        input.form-control.border-start-0(type="password" placeholder="Password" required name="password")

                .form-group.mb-3.d-flex.justify-content-between.align-items-center.animate-fadeIn
                    .form-check
                        input.form-check-input#remember(type="checkbox" name="checkbox" checked="true")
                        label.form-check-label.text-muted(for="remember" ) Remember me
                    a.text-primary.text-decoration-none.hover-effect(href="#") Forgot Password?

                button.btn.btn-primary.w-100.mb-3.animate-pulse(type="submit") 
                    span Sign In
                    i.fas.fa-arrow-right.ms-2

                .text-center.text-muted.animate-fadeIn
                    span Don't have an account? 
                    a.text-primary.text-decoration-none.hover-effect(href="#") Sign Up

                .social-login.text-center.mt-4.animate-slideUp
                    p.text-muted.mb-3 Or continue with
                    .social-buttons
                        button.btn.btn-outline-light.me-2.hover-scale
                            i.fab.fa-google
                        button.btn.btn-outline-light.me-2.hover-scale
                            i.fab.fa-facebook-f
                        button.btn.btn-outline-light.hover-scale
                            i.fab.fa-apple
    link(rel="stylesheet", href="/Css/login.css")
    style.
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideDown {
            from { transform: translateY(-30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @keyframes slideRight {
            from { transform: translateX(-30px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        @keyframes slideUp {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        @keyframes glow {
            0% { box-shadow: 0 0 5px rgba(255, 255, 255, 0.5); }
            50% { box-shadow: 0 0 20px rgba(255, 255, 255, 0.8); }
            100% { box-shadow: 0 0 5px rgba(255, 255, 255, 0.5); }
        }