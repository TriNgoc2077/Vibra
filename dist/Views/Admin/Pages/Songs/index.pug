extends ../../Layouts/default.pug 
block main 
    h1.mb-4 #{pageTitle}

    .card.mb-3 
        .card-header List 
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                    a(
                        href=`${prefixAdmin}/songs/create`
                        class='btn btn-outline-success'
                    ) + Add new
            table(class="table table:hover table-sm")
                thead   
                    tr 
                        th #
                        th Image 
                        th Title 
                        //- th Singer
                        //- th Topic 
                        //- th Position 
                        th Status 
                        th Action
                tbody 
                    each song,index in songs 
                        tr 
                            td #{index + 1} 
                            td 
                                img(
                                    src=song.avatar
                                    alt="avatar song"
                                    width="80px"
                                    height="100%"
                                )
                            td #{song.title}
                            //- td Singer 
                            //- td Topics 
                            //- td Postion 
                            td
                                if (song.status === "active")
                                    a(
                                        href="javascript:;"
                                        class="badge bg-success text-decoration-none"
                                    ) Active 
                                else 
                                    a(
                                        href="javascript:;"
                                        class="badge bg-danger text-decoration-none"
                                    ) Inactive
                            td  
                                a(
                                    href=`${prefixAdmin}/songs/detail/${song.id}`
                                    class="btn btn-secondary btn-sm me-1"
                                ) Detail 
                                a(
                                    href=`${prefixAdmin}/songs/edit/${song.id}`
                                    class="btn btn-warning btn-sm me-1"
                                ) Edit 
                                a(
                                    button-delete 
                                    data-id=song.id
                                    class="btn btn-danger btn-sm"
                                ) Delete 