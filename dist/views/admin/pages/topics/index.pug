extends ../../Layouts/default.pug 
block main 
    h1(class='mb-4') #{pageTitle}

    .card.mb-3 
        .card-header List 
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                    a(
                        href=`${prefixAdmin}/topics/create`
                        class='btn btn-outline-success'
                    ) + Add new
            table(class="table table:hover table-sm")
                thead 
                    tr 
                        th #
                        th Image
                        th Title 
                        th Status 
                        th Action 
                tbody 
                    each topic, index in topics 
                        tr 
                            td #{index + 1}
                            td 
                                img(
                                    src=topic.avatar, 
                                    alt="topic image"
                                    width="100px"
                                    height="auto"
                                )
                            td #{topic.title} 
                            td
                                if (topic.status === "active")
                                    a(
                                        href="javascript:;"
                                        class="badge bg-success text-decoration-none"
                                    ) Active 
                                else 
                                    a(
                                        href="javascript:;"
                                        class="badge bg-danger text-decoration-none"
                                    ) Inactive
                            td  
                                a(
                                    href=`${prefixAdmin}/topics/detail/${topic.id}`
                                    class="btn btn-secondary btn-sm"
                                ) Detail 
                                a(
                                    href=`${prefixAdmin}/topics/edit/${topic.id}`
                                    class="btn btn-warning btn-sm"
                                ) Edit 
                                a(
                                    button-delete 
                                    data-id=topic.id
                                    class="btn btn-danger btn-sm"
                                ) Delete 