extends ../../layouts/default.pug 
block main 
    h1.mb-4 #{pageTitle}
    form(
        action=`${prefixAdmin}/songs/edit/${song.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        .form-group 
            label(for='title') Title 
            input(
                type='text'
                class='form-control'
                id='title'
                name='title'
                required 
                value=song.title
            )
        .form-group 
            label(for='topic') Topic 
            select(
                name='topicId'
                id='topic'
                class='form-control'
                required
            )
                option(value='' disabled) -- Choose Topic --
                each topic in topics 
                    option(
                        value=topic.id 
                        selected=(topic.id == song.topicId ? true : false)
                    ) #{topic.title}
        .form-group 
            label(for='singer') Singer 
            select(
                name='singerId'
                id='singer'
                class='form-control'
                required
            )
                option(value='' disabled) -- Choose Singer --
                each singer in singers 
                    option(
                        value=singer.id 
                        selected=(singer.id === song.singerId ? true : false)
                    ) #{singer.fullName}
        .form-group(upload-image)
            label(for='avatar') Image 
            input(
                type='file'
                class='form-control-file'
                id='avatar'
                name='avatar'
                accept='image/*'
                upload-image-input
            ) 
            if song.avatar
                img.img-fluid.rounded(  
                    upload-image-preview
                    src=song.avatar 
                    alt="Current Image"
                    style="max-width: 200px; max-height: 200px;"  
                )  
        .form-group(upload-audio)
            label(for='audio') File audio
            input(
                type='file'
                class='form-control-file'
                id='audio'
                name='audio'
                accept='audio/*'
                upload-audio-input
            ) 
            if song.audio
                audio(controls upload-audio-preview)
                    source(src=song.audio type='audio/mpeg')
                    | Your browser does not support the audio element.
        .form-group 
            label(for='desc') Description 
            textarea(
                type='text'
                class='form-control textarea-mce'
                id='desc'
                name='description'
                rows='5'
            )= song.description
        .form-group 
            label(for='lyrics') Lyrics 
            textarea(
                class='form-control'
                id='lyrics'
                name='lyrics'
                rows='20'
            )= song.lyrics
        .form-group.form-check.form-check-inline 
            input(
                type="radio"
                class='form-check-input'
                id='statusActive'
                name='status'
                value='active'
                checked=(song.status == 'active' ? true : false)
            ) 
            label(for='statusActive' class='form-check-label') Active
        .form-group.form-check.form-check-inline 
            input(
                type="radio"
                class='form-check-input'
                id='statusInActive'
                name='status'
                value='inactive'
                checked=(song.status == 'inactive' ? true : false)
            ) 
            label(for='statusInActive' class='form-check-label') Inactive
        .form-group 
            button(
                type='submit'
                class='btn btn-warning'
            ) Edit